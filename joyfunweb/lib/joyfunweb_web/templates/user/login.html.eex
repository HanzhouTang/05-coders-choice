<h1>User Login</h1>
<%= form_for @conn, user_path(@conn, :verfication), fn form -> %>
<div class="form-group">
<%= text_input form, :username, placeholder: "Username", class: "form-control" %>
</div>
<div class="form-group">
<%= password_input form, :password, placeholder: "Password", class: "form-control" %>
</div>
<%= submit "Login", class: "btn btn-primary" %>
<%= link("Create account", to: user_path(@conn, :index), class: "btn btn-danger" )%>
<% end %>
